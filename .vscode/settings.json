{
    // flake8の設定
        // E203: whitespace before ':'（Blackと競合する）
        // W503: line break before binary operator
        // ANN101: Missing type annotation for self in method
        // ANN204: Missing return type annotation for special method
        // ANN401: Dynamically typed expressions (typing.Any) are disallowed
        // D105: Missing docstring in magic method
        // D107: Missing docstring in __init__
        // D400: First line should end with a period
        // D403: First word of the first line should be properly capitalized
        // D415: First line should end with a period, question mark, or exclamation point
        // DAR101: Missing parameter(s) in Docstring
        // DAR201: Missing "Returns" in Docstring
    "flake8.args": [
        "--max-line-length=100", // 最大文字数
        "--ignore=E203,W503,ANN101,ANN204,ANN401,D105,D107,D400,D403,D415,DAR101,DAR201",  // 無視するエラーコード
        "--select=E,W,F,N,D", // E: Error, W: Warning, F: Fatal, N: Naming, D: Docstring
        "--docstring-convention=google", // Googleスタイルのdocstringを使用
    ],
    // blackの設定
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // 拡張機能のBlack Formatterを使う場合には必ず指定する
        "editor.formatOnSave": true // ファイルの保存時にフォーマットを自動実行する場合
    },
    "[jupyter]": {
        "editor.defaultFormatter": "ms-python.black-formatter", // ipynbファイルにもBlackを適用
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length=100" // 最大文字数
    ],
    // mypyの設定
    "mypy-type-checker.args": [
        "--config-file=mypy.ini"
    ],
    // isortの設定
    "isort.args": [
        "--profile=black",  // Blackの設定を適用
        "--line-length=100", // 最大文字数
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit" // 保存時にimportを整理するが、明示的に指定されたもののみ適用。
    },
    // Jupyter Notebook で isort を有効にする（VSCode の拡張機能が対応していない場合）
    "notebook.formatOnSave.enabled": true,
    // markdownのlinter
    "markdownlint.config": {
        "MD033": false // <br>タグを許可
    },
    // 検索から除外するフォルダ
    "search.exclude": {
        ".mypy_cache/": true,
        "__pycache__/": true,
        ".pytest_cache/": true,
        "*.egg-info/": true,
    },
    // Code Spell Checkerで除外する単語
    "cSpell.words": [
        "mypy",
        "isort",
        "black",
        "flake8",
        "pytest",
        "asyncio",
        "mecab",
        "fastapi",
        "uvicorn",
        "pydantic",
        "ipadic",
        "neologd",
        "conftest",
        "libmecab",
        "mecabrc",
        "noqa",
        "dataclass",
        "Kubo",
        "elif",
        "PYTHONPATH",
        "ipykernel",
        "ipynb",
        "abspath",
        "darglint",
        "pylance",
        "venv",
        "pycache",
        "endgroup",
        "hoge",
        "fuga",
        "piyo",
        "docstrings",
        "tqdm",
        "numpy",
        "htmlcov",
        "dmypy",
        "defaultdict",
        "dataclasses",
        "excinfo",
        "ryoukai",
        "httpx",
        "stopwords",
    ],
    // GitHub Copilot Chatの設定
    "github.copilot.chat.reviewSelection.instructions": [
        {
            "file": "./doc/コーディング規約.md"
        }
    ],
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "file": "./doc/コーディング規約.md"
        },
        {
            "file": "./doc/SPEC.md"
        },
    ],
}
